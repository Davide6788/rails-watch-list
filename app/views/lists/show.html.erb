<div class="sticky-top">
  <nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand" href="#">
      MyCinema
    </a>
    <%= link_to "Add a Movie", new_list_bookmark_path(@list), :class => 'btn btn-outline-light my-2 my-sm-0 ' %>
</nav>
</div>

<div class="container">

  <h2><%= @list.name %></h2>
  <div class="movie-wrapper">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-movie">
        <img src=<%= bookmark.movie.poster_url %> alt="Movie poster" />
        <div class="card-movie-info">
          <div>
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.movie.overview %></p>
          </div>
          <h2 class="card-movie-rating"><%= bookmark.movie.rating %></h2>
          <%= link_to "Remove", bookmark_path(bookmark), method: :delete, :class => 'btn btn-outline-light my-2 my-sm-0 ' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
